{
    "name": "anstiftung/mapped-repair-events",
    "description": "Mapped repair events",
    "homepage": "https://github.com/anstiftung/mapped-repair-events",
    "config": {
        "platform": {
            "php": "7.3"
        }
    },
    "require": {
        "php": ">=7.3",
        "cakephp/cakephp": "3.*",
        "cakephp/migrations": "@stable",
        "cakephp/plugin-installer": "~1.0",
        "mobiledetect/mobiledetectlib": "2.*",
        "markstory/asset_compress": "3.*",
        "natxet/cssmin": "3.*",
        "tedivm/jshrink": "^1.3",
        "intervention/image": "^2.4",
        "studio-42/elfinder": "^2.1",
        "ezyang/htmlpurifier": "^4.11"
    },
    "require-dev": {
        "psy/psysh": "@stable",
        "cakephp/debug_kit": "3.*",
        "cakephp/cakephp-codesniffer": "^3.0",
        "phpunit/phpunit": "6.*",
        "phpstan/phpstan": "^0.11.15"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "Admin\\": "plugins/Admin/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "bash devtools/composer-post-install.sh"
        ],
        "post-update-cmd": [
            "bash devtools/composer-post-install.sh"
        ],
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests",
        "cs-fix": "phpcbf --colors --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests",
        "test": "phpunit --colors=always"
    },
    "prefer-stable": true
}
